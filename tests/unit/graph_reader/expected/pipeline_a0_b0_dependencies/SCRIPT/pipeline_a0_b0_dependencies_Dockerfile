FROM python:3.9

RUN mkdir /tmp/installers
WORKDIR /tmp/installers

# Copy all the requirements to run current DAG
COPY ./pipeline_a0_b0_dependencies/pipeline_a0_b0_dependencies_requirements.txt ./

# Install required libs
RUN pip install -r ./pipeline_a0_b0_dependencies_requirements.txt

WORKDIR /home
COPY . .

CMD [ "standalone" ]