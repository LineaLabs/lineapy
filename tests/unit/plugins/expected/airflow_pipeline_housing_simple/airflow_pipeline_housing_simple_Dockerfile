FROM apache/airflow:latest-python{python_version}

RUN mkdir /tmp/installers
WORKDIR /tmp/installers

# copy all the requirements to run the current dag
COPY ./airflow_pipeline_housing_simple_requirements.txt ./
# install the required libs
RUN pip install -r ./airflow_pipeline_housing_simple_requirements.txt

WORKDIR /opt/airflow/dags
COPY . .

WORKDIR /opt/airflow

CMD [ "standalone" ]